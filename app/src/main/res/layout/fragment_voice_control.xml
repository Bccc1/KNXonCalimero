<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calimero.knx.knxvc.VoiceControlFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/vc_start_speaking"
        android:layout_margin="20sp"
        android:id="@+id/tvText"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Licht an\nRaum 1 Licht 1 an\nRaum 1 Licht 2 an\nRaum 2 Licht 1 an"
        android:gravity="center"
        android:layout_below="@+id/speakButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvExecutionInfo"
        android:visibility="invisible" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/speakButton"
        android:layout_gravity="center"
        android:background="@android:drawable/ic_btn_speak_now"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/vcResultListView"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_below="@+id/speakButton" />

</RelativeLayout>
