<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calimero.knx.knxvc" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.calimero.knx.knxvc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.calimero.knx.knxvc.VoiceCommandListActivity"
            android:label="@string/title_voicecommand_list" >

        </activity>
        <activity
            android:name="com.calimero.knx.knxvc.VoiceCommandDetailActivity"
            android:label="@string/title_voicecommand_detail"
            android:parentActivityName="com.calimero.knx.knxvc.VoiceCommandListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.calimero.knx.knxvc.VoiceCommandListActivity" />
        </activity>
    </application>

</manifest>